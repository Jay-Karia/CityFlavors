generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @map("_id")
  email    String    @unique
  password String
  name     String?
  address  UserInfo?
  Cart     Cart?
  Order    Order?
}

model UserInfo {
  id      String @id @map("_id")
  userId  Int    @unique
  user    User   @relation(fields: [userId], references: [id])
  address String
  city    String
  pincode String
}

model Category {
  id          String    @id @map("_id")
  name        String    @unique
  description String?
  products    Product[]
}

model Cart {
  id     String    @id @map("_id")
  userId Int       @unique
  user   User      @relation(fields: [userId], references: [id])
  items  Product[]
}

model Product {
  id          String    @id @map("_id")
  name        String
  description String?
  price       Float
  category    String?
  image       String?
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  Cart        Cart?     @relation(fields: [cartId], references: [id])
  cartId      String?
}